{
    "version": "1.8.10",
    "compilerOptions": {
        "target": "es5",
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "./lib",
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "spec/**/*.ts"
    ]
}